package array;

import java.util.Arrays;

public class SeperateEvenOddNumbers {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		int[] numbers = {1,2,3,4,5,6,7,8,8,8,9,3};
		seperateEcenOddNumbers(numbers);
		
	}
	
	public static void seperateEcenOddNumbers(int[] numbers){
		int temp = 0;
		int i =0;
		int j = numbers.length -1;
		
		while(i<j){
			while(numbers[i]%2==0){
				i++;
			}
			while(numbers[j]%2!=0){
				j--;
			}
			if(i<j){
				temp = numbers[i];
				numbers[i] = numbers[j];
				numbers[j] = temp;
			}
		}
		
		System.out.println(Arrays.toString(numbers));
	}

}
