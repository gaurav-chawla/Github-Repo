package string.reversestring;

public class ReverseString {

	/**
	 * @param args
	 */
	public static void main(String[] args) {
		String s = "This is test string";
		usingSingleCharArray(s);
	}
	
	public static void usingSingleCharArray(String s){
		char[] charArr = s.toCharArray();
		char temp = 'a';
		for(int i=0;i<charArr.length;i++){
			temp = charArr[i];
			charArr[i] = charArr[charArr.length -i];
			charArr[charArr.length - i] = temp;
		}
		System.out.println(charArr.toString());
		
	}
	
	public void usingMultipleCharArray(String s){
		char[] charArr = s.toCharArray();
		
	}
	
	public void usingRecurssion(String s){
		char[] charArr = s.toCharArray();
		
	}

}
